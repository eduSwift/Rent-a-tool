<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
      <div class="card-header">
        <h1 class="card-title text-center">Sign up</h1>
      </div>
      <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signup' }) do |f| %>
              <%= f.error_notification %>

              <div class="form-group">
                <%= f.input :first_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "first-name", class: 'form-control', placeholder: 'First Name' } %>
              </div>

              <div class="form-group">
                <%= f.input :last_name,
                            required: true,
                            input_html: { autocomplete: "last-name", class: 'form-control', placeholder: 'Last Name' } %>
              </div>

              <div class="form-group">
                <%= f.input :address,
                            required: true,
                            input_html: { autocomplete: "address", class: 'form-control', placeholder: 'Address' } %>
              </div>

              <div class="form-group">
                <%= f.input :email,
                            required: true,
                            input_html: { autocomplete: "email", class: 'form-control', placeholder: 'Email' } %>
              </div>

              <div class="form-group">
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password", class: 'form-control', placeholder: 'Password' } %>
              </div>

              <div class="form-group">
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm Password' } %>
              </div>

              <div class="form-actions text-center">
                <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
                <%= link_to "Already have an account?",   new_user_session_path, class: "btn btn-primary"%>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
