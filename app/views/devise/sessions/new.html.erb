
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Log in</h1>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
            </div>
            <div class="form-group form-check">
              <%= f.input :remember_me, as: :boolean, label: false, input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
              <%= f.label :remember_me, class: "form-check-label" if devise_mapping.rememberable? %> Remember me
            </div>
            <div class="form-group">
              <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
