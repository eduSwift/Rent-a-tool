

<div class="container mt-5">
  <h1>Hello <%= @user.first_name %>!</h1>

  <div class="mt-4">
    <div class="card">
      <div class="card-header">
        <h3>Your Info</h3>
      </div>
      <div class="card-body">
        <p><strong>First Name:</strong> <%= @user.first_name %></p>
        <p><strong>Last Name:</strong> <%= @user.last_name %></p>
        <p><strong>Address:</strong> <%= @user.address %></p>
        <p><strong>Password:</strong> <%= @user.password %></p>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="card">
      <div class="card-header">
        <h3>Your Bookings</h3>
      </div>
      <div class="card-body">
        <% @bookings.each do |booking| %>
          <p><strong>Start Date:</strong> <%= booking.start_date.time.strftime("%d.%m.%Y") %></p>
          <p><strong>End Date:</strong> <%= booking.end_date.time.strftime("%d.%m.%Y") %></p>
          <p><strong>User:</strong> <%= booking.user.first_name %></p>
          <p><strong>Tool:</strong> <%= booking.tool.name %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="card">
      <div class="card-header">
        <h3>Your Tools</h3>
      </div>
      <div class="card-body">
        <button class="btn btn-outline-primary" data-action="click->toggle#fire">Add a New Tool</button>
        <div data-toggle-target="togglableElement" class="d-none">
          <%= render "tools/form", tool: @tool %>
        </div>
      </div>
    </div>
  </div>
</div>
