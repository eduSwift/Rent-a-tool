<div class="container">
  <% if !user_signed_in? %>
    <div class="banner">
      <div class="text-center">
        <%= image_tag('https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/Schlaegel_und_Eisen_nach_DIN_21800.svg/800px-Schlaegel_und_Eisen_nach_DIN_21800.svg.png', resize: "100", size:"200") %>
        <h3> Rent a Tool </h3>
        <h4> Your Center specialized in Tool Rental Service for over 20 years in the market </h4>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <h3>Latest tools</h3>
    <div id="tool" class="cards mt-5" data-insert-in-list-target="items">
      <% @tools.each do |tool|%>
        <div class="card-trip" data-controller="toggle" class="mt-5">
          <h2><%= tool.name %></h2>
          <img src="<%= tool.image %>" alt="">
          <button class="btn btn-outline-primary" data-action="click->toggle#tool">More infos</button>
          <div data-toggle-target="toolElement" class="d-none">
            <%= render "shared/tool_card", tool: tool %>
          </div>
          <button class="btn btn-outline-primary" data-tool-id="<%=tool.id%>" data-action="click->toggle#booking">Request a new booking</button>
          <div data-toggle-target="bookingElement" class="d-none" data-tool-url= "<%=tool_popup_path(tool)%>">
            <%= render "bookings/form", tool: tool, booking: @booking %>
        <%# <%= link_to "Request a booking",  new_tool_booking_path(tool), class: "btn btn-primary" %>
          </div>
          
        </div>
      <% end %>
    </div>

  <div class="d-flex justify-content-between my-4 align-items-center">
    <h2> Mobile version </h2>
  </div>
</div>
